{
  "name": "plugin-vite-electron-renderer",
  "version": "1.0.0",
  "description": "Modern Vite plugin for Electron Renderer - Support Node.js API in Electron Renderer process",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmazzella/plugin-vite-electron-renderer.git"
  },
  "author": "Damiano Mazzella <damianomazzella@gmail.com>",
  "license": "MIT",
  "keywords": [
    "vite",
    "vite-plugin",
    "electron",
    "electron-renderer",
    "node-integration",
    "esm",
    "cjs"
  ],
  "engines": {
    "node": ">=20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build && npm run test"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "electron": "^38.0.0",
    "esbuild": "^0.27.0",
    "rollup": "^4.53.3",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vitest": "^4.0.0"
  }
}